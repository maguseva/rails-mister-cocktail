<div class="banner">
  <div class="container">
    <div class="cards">
      <% @cocktails.each do |cocktail|%>
        <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, crop: :fill %>')">
          <%= link_to cocktail.name, cocktail %>
        </div>
      <% end %>
    </div>
  </div>
</div>
