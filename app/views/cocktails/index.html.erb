<div class="banner">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col">
        <% @cocktails.each do |cocktail|%>
          <div class="cards">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, crop: :fill %>')">
              <%= link_to cocktail.name, cocktail %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

