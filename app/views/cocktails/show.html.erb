<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<div id="ingreients">
  <p>Ingredients:</p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> - <%= dose.description %>
      <%= link_to '(delete)', dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure you want to delete #{dose.ingredient.name}?" }%>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add an ingridient', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

</div>

<%= link_to 'Back', cocktails_path, class: "btn btn-secondary" %>
